<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/baseline_attach_money_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/baseline_attach_money_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantManager2"
        tools:targetApi="31">
        <activity
            android:name=".myui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.RestaurantManager2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".myui.DishActivity"
            android:exported="false"/>
        <activity
            android:name=".myui.EditDishActivity"
            android:exported="false"/>
        <activity
            android:name=".myui.MenuActivity"
            android:exported="false"/>
        <activity
            android:name=".myui.EditMenuActivity"
            android:exported="false"/>
        <activity
            android:name=".myui.OrderTableActivity"
            android:exported="false"/>
        <activity
            android:name=".myui.EditTableActivity"
            android:exported="false"/>
        <activity
            android:name=".myui.OrderActivity"
            android:exported="false"/>
        <activity
            android:name=".myui.EditOrderActivity"
            android:exported="false"/>
        <activity
            android:name=".myui.RevenueActivity"
            android:exported="false"/>
    </application>

</manifest>